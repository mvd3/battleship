<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Battleship.MainWindow"
        Title="Потапање бродова"
        Background="#070F2B"
        Width="1460"
        Height="680">
    <StackPanel Orientation="Horizontal">
        <Border BorderBrush="#FAEF5D"
                BorderThickness="0, 0, 1, 0">
            <StackPanel Width="300"
                        Spacing="30">
                <Button Width="200"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Cursor="Hand"
                        Margin="0, 40, 0, 0"
                        Tag="0"
                        Click="StartGame"
                        x:Name="VersusLeftBot">
                    Играј против левог бота
                </Button>
                <Button Width="200"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Cursor="Hand"
                        Tag="1"
                        Click="StartGame"
                        x:Name="VersusRightBot">
                    Играј против десног бота
                </Button>
                <Button Width="200"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Cursor="Hand"
                        Tag="2"
                        Click="StartGame"
                        x:Name="BotVersusBot">
                    Бот против бота
                </Button>
                <StackPanel HorizontalAlignment="Center"
                            Margin="0, 100, 0, 0"
                            Spacing="25">
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="20">
                        Легенда
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10">
                        <Rectangle Fill="#1D24CA"
                                   Height="30"
                                   Width="30">
                        </Rectangle>
                        <TextBlock VerticalAlignment="Center">
                            - негађано поље
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10">
                        <Rectangle Fill="#1F2544"
                                   Height="30"
                                   Width="30">
                        </Rectangle>
                        <TextBlock VerticalAlignment="Center">
                            - промашено поље
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10">
                        <Rectangle Fill="#FC6736"
                                   Height="30"
                                   Width="30">
                        </Rectangle>
                        <TextBlock VerticalAlignment="Center">
                            - оштећен брод
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10">
                        <Rectangle Fill="#FF004D"
                                   Height="30"
                                   Width="30">
                        </Rectangle>
                        <TextBlock VerticalAlignment="Center">
                            - уништен брод
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10">
                        <Rectangle Fill="#EAD7BB"
                                   Height="30"
                                   Width="30">
                        </Rectangle>
                        <TextBlock VerticalAlignment="Center">
                            - брод
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border BorderBrush="#FAEF5D"
                BorderThickness="0, 0, 1, 0">
            <StackPanel>
                <Border Height="60"
                        BorderBrush="#FAEF5D"
                        BorderThickness="0, 0, 0, 1">
                    <TextBlock x:Name="LeftPlayerInfo"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                    </TextBlock>
                </Border>
                <Grid x:Name="LeftBoard"
                        Margin="40, 60, 40, 0">
                </Grid>
            </StackPanel>
        </Border>
        <StackPanel>
                <Border Height="60"
                        BorderBrush="#FAEF5D"
                        BorderThickness="0, 0, 0, 1">
                    <TextBlock x:Name="RightPlayerInfo"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                    </TextBlock>
                </Border>
                <Grid x:Name="RightBoard"
                        Margin="40, 60, 40, 0">
                </Grid>
            </StackPanel>
    </StackPanel>
</Window>
